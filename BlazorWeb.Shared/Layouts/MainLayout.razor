@layout AuthorizedLayout
@inject RouterStore Store
@inject AppStore App

<PageTitle>@($"管理系统 - {Store.Current?.RouteName ?? "主页"}")</PageTitle>

    <CascadingValue Value="this">

        <div class="page" style="@(Loading ? "display:none":"display:block")">
