@typeparam TPower where TPower : class, IPower, new()
@typeparam TRole where TRole : class, IRole, new()
@inherits ModelPage<TPower, GenericRequest<TPower>>
@TableFragment

@code {
    string? selectedIcon;
    RenderFragment<object?> IconSelect()
    {
        return data =>
        {
            TPower? p = data as TPower;
            selectedIcon = p?.Icon;
            return@<Project.AppCore.SystemPermission.Component.PowerIconSelector @bind-Value="@selectedIcon"></Project.AppCore.SystemPermission.Component.PowerIconSelector>
    ;
        };
    }
}
