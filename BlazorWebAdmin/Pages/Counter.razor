@page "/counter"
@inject StoreData.CounterStore store
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @store.Count</p>
<p role="status">Current count: @incrementCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int incrementCount = 0;
    private void IncrementCount()
    {
        store.Count++;
        incrementCount++;
    }
}
