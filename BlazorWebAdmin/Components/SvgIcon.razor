<i @onclick="handleClick">
	@IconMarkuString
</i>
@code {
	private string _IconName = "";
	[Parameter]
	public string IconName { get; set; }

	MarkupString IconMarkuString;

	[Parameter]
	public string ClassName { get; set; } = "svg-icon";

	[Parameter]
	public EventCallback OnClick { get; set; }

	private async Task handleClick()
	{
		await OnClick.InvokeAsync();
	}

	protected override async Task OnParametersSetAsync()
	{
		await loadSvgData();
		await base.OnParametersSetAsync();
	}

	async Task loadSvgData()
	{
		var svgContent = await File.ReadAllTextAsync($"wwwroot/icons/{IconName}.svg");
		var insertIndex = svgContent.IndexOf("<svg") + 4;
		//TODO svg文件处理
		svgContent = svgContent.Insert(insertIndex, $" class='{ClassName}'");

		IconMarkuString = new MarkupString(svgContent);
	}

}
<style>
	.svg-icon {
		width: 1em;
		height: 1em;
		vertical-align: -0.15em;
		fill: currentColor;
		overflow: hidden;
		cursor: pointer;
	}
</style>